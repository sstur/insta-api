{
  "name": "chirper-api",
  "version": "0.0.0",
  "scripts": {
    "start": "ts-node-dev --no-notify --respawn --transpile-only src/index.ts",
    "seed": "ts-node src/cli/seed.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "jest": "jest --passWithNoTests",
    "test": "yarn typecheck && yarn jest"
  },
  "dependencies": {
    "@graphql-yoga/node": "^2.13.13",
    "@pothos/core": "^3.21.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "graphql-playground-middleware-express": "^1.7.23",
    "runtypes": "^6.6.0",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "private": true
}
